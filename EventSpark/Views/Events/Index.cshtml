@model EventSpark.Web.Models.EventListViewModel
@using EventSpark.Core.Enums

@{
    ViewData["Title"] = "Events";
    var currentUserId = ViewBag.CurrentUserId as string;
}

<h1>Events</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</p>

<form method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text"
                   name="search"
                   value="@Model.SearchTerm"
                   class="form-control"
                   placeholder="Search title or description" />
        </div>

        <div class="col-md-2">
            <select name="categoryId" class="form-select">
                <option value="">All categories</option>
                @foreach (var cat in Model.Categories)
                {
                    <option value="@cat.EventCategoryId"
                            selected="@(Model.SelectedCategoryId.HasValue && Model.SelectedCategoryId.Value == cat.EventCategoryId)">
                        @cat.Name
                    </option>
                }
            </select>

        </div>

        <div class="col-md-2">
            <select name="city" class="form-select">
                <option value="">All cities</option>
                @foreach (var c in Model.Cities)
                {
                    <option value="@c"
                            selected="@(string.Equals(Model.SelectedCity, c, StringComparison.OrdinalIgnoreCase))">
                        @c
                    </option>
                }
            </select>

        </div>

        <div class="col-md-2">
            <input type="date"
                   name="from"
                   value="@(Model.FromDate?.ToString("yyyy-MM-dd"))"
                   class="form-control"
                   placeholder="From date" />
        </div>

        <div class="col-md-2">
            <input type="date"
                   name="to"
                   value="@(Model.ToDate?.ToString("yyyy-MM-dd"))"
                   class="form-control"
                   placeholder="To date" />
        </div>

        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </div>
</form>

@if (!Model.Events.Any())
{
    <p>No events found matching your filters.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
        @foreach (var e in Model.Events)
        {
            <div class="col">
                <div class="card event-card">
                    <div class="event-card-header d-flex justify-content-between align-items-start">
                        <div class="me-2">
                            <h5 class="text-truncate" title="@e.Title">@e.Title</h5>
                            <div class="event-meta event-city">
                                <i class="bi bi-geo-alt"></i>@e.City
                            </div>
                        </div>
                        <span class="badge badge-status @(e.Status == EventStatus.Published ? "bg-success" : "bg-secondary")">
                            @e.Status
                        </span>
                    </div>

                    <div class="event-card-body">
                        <div class="event-meta mb-2">
                            <i class="bi bi-calendar-event"></i>
                            @e.StartDateTime.ToString("ddd, MMM dd yyyy h:mm tt")
                        </div>

                        @if (!string.IsNullOrWhiteSpace(e.VenueName))
                        {
                            <div class="event-meta mb-2">
                                <i class="bi bi-building"></i>@e.VenueName
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(e.Description))
                        {
                            <p class="mb-0 small text-muted">
                                @(
                                    e.Description.Length > 120
                                    ? e.Description.Substring(0, 117) + "..."
                                    : e.Description
                                    )
                            </p>
                        }
                    </div>

                    <div class="event-card-footer d-flex justify-content-between align-items-center">
                        <div class="small">
                            <a asp-action="Details" asp-route-id="@e.EventId">Details</a>

                            @* Only owner sees Edit/Delete/Manage Ticket Types *@
                            @if (!string.IsNullOrEmpty(currentUserId) && e.OrganizerId == currentUserId)
                            {
                                <span class="text-muted"> | </span>
                                <a asp-action="Edit" asp-route-id="@e.EventId">Edit</a>
                                <span class="text-muted"> | </span>
                                <a asp-action="Delete" asp-route-id="@e.EventId">Delete</a>
                                <span class="text-muted"> | </span>
                                <a asp-controller="TicketTypes"
                                   asp-action="Index"
                                   asp-route-eventId="@e.EventId">
                                    Ticket Types
                                </a>
                            }
                        </div>

                        @* Anyone can buy published events *@
                        @if (e.Status == EventStatus.Published)
                        {
                            <a asp-controller="Orders"
                               asp-action="Purchase"
                               asp-route-eventId="@e.EventId"
                               class="btn btn-sm btn-success">
                                Buy
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}


@if (Model.TotalPages > 1)
{
    <nav aria-label="Event pages">
        <ul class="pagination">
            @for (int p = 1; p <= Model.TotalPages; p++)
            {
                var isCurrent = p == Model.Page;
                <li class="page-item @(isCurrent ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new {
                                page = p,
                                search = Model.SearchTerm,
                                categoryId = Model.SelectedCategoryId,
                                city = Model.SelectedCity,
                                from = Model.FromDate?.ToString("yyyy-MM-dd"),
                                to = Model.ToDate?.ToString("yyyy-MM-dd")
                            })">
                        @p
                    </a>
                </li>
            }
        </ul>
    </nav>
}
