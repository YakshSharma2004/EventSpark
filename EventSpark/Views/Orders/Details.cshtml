@model EventSpark.Core.Entities.Event
@using EventSpark.Core.Enums
@using System.Security.Claims

@{
    ViewData["Title"] = "Event Details";

    var currentUserId = User.Identity?.IsAuthenticated == true
        ? User.FindFirstValue(ClaimTypes.NameIdentifier)
        : null;

    bool isOwner = !string.IsNullOrEmpty(currentUserId) && Model.OrganizerId == currentUserId;
    bool canBuy = Model.Status == EventStatus.Published;
}

<h1 class="mb-3">@Model.Title</h1>

<div class="card event-detail-card mb-4">
    @* Top image if we have an URL *@
    @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
    {
        <div class="event-detail-image-wrapper">
            <img src="@Model.ImagePath"
                 alt="@Model.Title"
                 class="img-fluid event-detail-image" />
        </div>
    }

    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <div class="event-detail-meta mb-1">
                    <strong>When:</strong>
                    @Model.StartDateTime.ToLocalTime().ToString("ddd, MMM dd yyyy h:mm tt")
                    @if (Model.EndDateTime > Model.StartDateTime)
                    {
                        <span> &ndash; @Model.EndDateTime.ToLocalTime().ToString("h:mm tt")</span>
                    }
                </div>
                <div class="event-detail-meta mb-1">
                    <strong>Where:</strong>
                    @if (!string.IsNullOrWhiteSpace(Model.VenueName))
                    {
                        @Model.VenueName
                        if (!string.IsNullOrWhiteSpace(Model.VenueAddress))
                        {
                            <span>, @Model.VenueAddress</span>
                        }
                    }
                    else
                    {
                        @Model.City
                    }
                </div>
                <div class="event-detail-meta">
                    <strong>City:</strong> @Model.City
                    @if (Model.MaxCapacity.HasValue)
                    {
                        <span> · <strong>Capacity:</strong> @Model.MaxCapacity</span>
                    }
                </div>
            </div>

            <div class="text-end">
                <span class="badge badge-status @(Model.Status == EventStatus.Published ? "bg-success" : "bg-secondary")">
                    @Model.Status
                </span>
                @if (Model.Category != null)
                {
                    <div class="small text-muted mt-1">
                        @Model.Category.Name
                    </div>
                }
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <hr />
            <p class="mb-0">
                @Model.Description
            </p>
        }
    </div>

    <div class="card-footer d-flex justify-content-between align-items-center">
        <div class="small text-muted">
            Created: @Model.CreatedAt.ToLocalTime().ToString("MMM dd yyyy h:mm tt")
        </div>

        <div class="d-flex gap-2">
            @if (isOwner)
            {
                <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-sm btn-outline-primary">
                    Edit Event
                </a>
                <a asp-controller="TicketTypes"
                   asp-action="Index"
                   asp-route-eventId="@Model.EventId"
                   class="btn btn-sm btn-outline-secondary">
                    Manage Ticket Types
                </a>
            }

            @if (canBuy)
            {
                <a asp-controller="Orders"
                   asp-action="Purchase"
                   asp-route-eventId="@Model.EventId"
                   class="btn btn-sm btn-primary">
                    Buy Tickets
                </a>
            }

            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                Back to Events
            </a>
        </div>
    </div>
</div>
