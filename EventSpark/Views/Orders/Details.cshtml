@model EventSpark.Web.Models.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">Order #@Model.OrderId</h5>
                    <small class="text-muted">
                        Placed on @Model.CreatedAt.ToLocalTime().ToString("ddd, MMM dd yyyy h:mm tt")
                    </small>
                </div>
                <span class="badge bg-primary-subtle text-primary-emphasis">
                    Paid @Model.TotalAmount.ToString("C")
                </span>
            </div>

            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-uppercase text-muted small mb-2">Event</h6>
                    <div class="fw-semibold">@Model.EventTitle</div>
                    <div class="small text-muted">
                        @Model.EventStartDateTime.ToLocalTime().ToString("ddd, MMM dd yyyy h:mm tt")
                    </div>
                    <div class="small text-muted">
                        @Model.VenueName
                    </div>
                </div>

                <hr />

                <div>
                    <h6 class="text-uppercase text-muted small mb-2">Tickets</h6>

                    @if (!Model.Tickets.Any())
                    {
                        <p class="text-muted mb-0">No tickets found for this order.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead class="small text-muted">
                                    <tr>
                                        <th scope="col">Ticket #</th>
                                        <th scope="col">Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var t in Model.Tickets)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@t.TicketNumber</td>
                                            <td>@t.TicketTypeName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a asp-controller="Orders"
                   asp-action="MyOrders"
                   class="btn btn-outline-secondary btn-sm">
                    Back to My Orders
                </a>
                <a asp-controller="Orders"
                   asp-action="MyTickets"
                   class="btn btn-primary btn-sm">
                    View My Tickets
                </a>
            </div>
        </div>
    </div>
</div>
