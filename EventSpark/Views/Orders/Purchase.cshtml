@model EventSpark.Web.Models.PurchaseTicketsViewModel

@{
    ViewData["Title"] = "Buy Tickets";
}

<h1>Buy Tickets</h1>

<h3>@Model.EventTitle</h3>
<p>
    @Model.EventStartDateTime<br />
    @Model.VenueName
</p>

@if (!string.IsNullOrEmpty(ViewBag.Message as string))
{
    <p>@ViewBag.Message</p>
}
else
{
    <form asp-action="Purchase" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="EventId" />

        <table class="table">
            <thead>
                <tr>
                    <th>Ticket Type</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Tickets.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.Tickets[i].Name
                            <input type="hidden" asp-for="Tickets[@i].TicketTypeId" />
                            <input type="hidden" asp-for="Tickets[@i].Name" />
                            <input type="hidden" asp-for="Tickets[@i].Price" />
                        </td>
                        <td>@Model.Tickets[i].Price.ToString("C")</td>
                        <td>
                            <input asp-for="Tickets[@i].Quantity" class="form-control" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-danger">
            @Html.ValidationSummary(false)
        </div>

        <button type="submit" class="btn btn-primary">Confirm Order</button>
        <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">
            Cancel
        </a>
    </form>
}
