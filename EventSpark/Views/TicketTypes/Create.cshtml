@model EventSpark.Core.Entities.TicketType

@{
    ViewData["Title"] = "Create Ticket Type";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header">
                <h5 class="mb-0">Create Ticket Type</h5>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="EventId" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TotalQuantity" class="form-label"></label>
                            <input asp-for="TotalQuantity" class="form-control" />
                            <span asp-validation-for="TotalQuantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SaleStartUtc" class="form-label">Sale Start (UTC)</label>
                            <input asp-for="SaleStartUtc" class="form-control" type="datetime-local" />
                            <span asp-validation-for="SaleStartUtc" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SaleEndUtc" class="form-label">Sale End (UTC)</label>
                            <input asp-for="SaleEndUtc" class="form-control" type="datetime-local" />
                            <span asp-validation-for="SaleEndUtc" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-route-eventId="@Model.EventId" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            Save Ticket Type
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
