@model EventSpark.Core.Entities.TicketType

@{
    ViewData["Title"] = "Create Ticket Type";
    var evt = ViewBag.Event as EventSpark.Core.Entities.Event;
}

<h1>Create Ticket Type for @evt?.Title</h1>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="EventId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="TotalQuantity" class="form-label"></label>
        <input asp-for="TotalQuantity" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SaleStartUtc" class="form-label"></label>
        <input asp-for="SaleStartUtc" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SaleEndUtc" class="form-label"></label>
        <input asp-for="SaleEndUtc" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-eventId="@Model.EventId" class="btn btn-secondary">Cancel</a>
</form>
