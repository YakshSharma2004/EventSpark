@model EventSpark.Core.Entities.TicketType

@{
    ViewData["Title"] = "Edit Ticket Type";
}

<h1>Edit Ticket Type</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <input type="hidden" asp-for="TicketTypeId" />
            <input type="hidden" asp-for="EventId" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="TotalQuantity" class="form-label"></label>
                    <input asp-for="TotalQuantity" class="form-control" />
                    <span asp-validation-for="TotalQuantity" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <label asp-for="SaleStartUtc" class="form-label"></label>
                    <input asp-for="SaleStartUtc" class="form-control" />
                    <span asp-validation-for="SaleStartUtc" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="SaleEndUtc" class="form-label"></label>
                    <input asp-for="SaleEndUtc" class="form-control" />
                    <span asp-validation-for="SaleEndUtc" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-route-eventId="@Model.EventId" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
