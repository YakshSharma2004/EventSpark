@model EventSpark.Core.Entities.TicketType

@{
    ViewData["Title"] = "Delete Ticket Type";
    var evt = ViewBag.Event as EventSpark.Core.Entities.Event;
}

<h1>Delete Ticket Type for @evt?.Title</h1>

<h3>Are you sure you want to delete this ticket type?</h3>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
    <p><strong>Quantity:</strong> @Model.TotalQuantity</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TicketTypeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-eventId="@Model.EventId" class="btn btn-secondary">Cancel</a>
</form>
