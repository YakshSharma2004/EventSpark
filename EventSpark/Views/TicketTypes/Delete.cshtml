@model EventSpark.Core.Entities.TicketType

@{
    ViewData["Title"] = "Delete Ticket Type";
}

<h1>Delete Ticket Type</h1>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this ticket type?</strong>
    <div class="mt-1">
        This will prevent new tickets of this type from being sold.
        Existing tickets already sold will remain in the system.
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            @Model.Description
        </p>
        <p class="card-text">
            <strong>Price:</strong> @Model.Price.ToString("C")<br />
            <strong>Total quantity:</strong> @Model.TotalQuantity
        </p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="TicketTypeId" />
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="Index" asp-route-eventId="@Model.EventId" class="btn btn-secondary ms-2">Cancel</a>
</form>
